<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ warehouse.name }}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        html,body{
            background-color: #212529;
            font-size: 1.7rem;
        }
        body{
            padding-top: 0.2em;
        }
        td.itemCaption{
            width: 25%;
            letter-spacing: 0.15em;
        }
        .itemCaptionSmall{
            letter-spacing: 0.15em;
            color: #999;
            text-align: right;
            padding-right: 1em;
        }
    </style>
</head>
<body>

<div class="container-fluid">

    <div class="row">
        <div class="col-2">
            {% for item in queue %}
                <div class="itemCaptionSmall">{{ item.caption }}</div>
            {% endfor %}
        </div>
        <div class="col-10">
            <table class="table table-striped table-dark">
                <thead>
                {#<tr>#}
                {#<th>order</th>#}
                {#<th>status</th>#}
                {#</tr>#}
                {#</thead>#}
                <tbody>
                {% for item in queue %}
                    <tr class="{{ item.status == 'readyForPickup' ? 'bg-success' : '' }}">
                        <td class="text-right itemCaption">{{ item.caption }}</td>
                        <td class="itemStatus">{{ item.translated }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>



        {#<div class="row">#}
            {#<div class="col">#}
                {#{{ item.caption }}#}
            {#</div>#}
            {#<div class="col">#}
                {#{{ item.status }}#}
            {#</div>#}
            {#<div>#}
                {#{{ item.uuid }}#}
                {#{{ item.updated|date('Y-m-d H:i:s') }}#}
                {#{{ item.created|default(item.updated)|date('Y-m-d H:i:s') }}#}
            {#</div>#}
        {#</div>#}
    {##}
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script>
    setTimeout(function () {
        window.location.reload(true)
    }, 5000);
</script>
</body>
</html>

